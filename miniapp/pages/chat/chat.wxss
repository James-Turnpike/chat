.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f7f7;
}
.header {
  padding: 20rpx 28rpx 16rpx;
  background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 45%, #e3fbf7 100%);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.02);
}
.title {
  font-size: 36rpx;
  color: #222222;
  letter-spacing: 2rpx;
}
.messages {
  flex: 1;
  padding: 24rpx;
  background: #f7f7f7;
  box-sizing: border-box;
}
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #c1c1c1;
  font-size: 26rpx;
}
.msg {
  max-width: 85%;
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
  animation: fadeInUp 0.22s ease-out both;
}
.msg.self {
  flex-direction: row-reverse;
  align-self: flex-end;
}
.msg.other {
  align-self: flex-start;
}
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.content {
  display: flex;
  flex-direction: column;
  margin: 0 16rpx;
  max-width: 100%;
}
.nick {
  font-size: 22rpx;
  color: #9a9a9a;
  margin-bottom: 8rpx;
}
.self .nick {
  text-align: right;
}
.bubble-row {
  display: flex;
  align-items: flex-end;
}
.self .bubble-row {
  flex-direction: row-reverse;
}
.bubble {
  padding: 18rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-shadow: 0 4rpx 18rpx rgba(0, 0, 0, 0.06);
  position: relative;
  word-break: break-all;
}
.other .bubble {
  background: #ffffff;
  color: #2b2b2b;
  border-top-left-radius: 4rpx;
}
.self .bubble {
  background: #d4f2ee;
  color: #1a4b43;
  border-top-right-radius: 4rpx;
}
.time {
  font-size: 20rpx;
  color: #cecece;
  margin: 0 12rpx;
  margin-bottom: 4rpx;
  white-space: nowrap;
}
.input-bar {
  display: flex;
  align-items: center;
  padding: 12rpx;
  background: #ffffff;
  border-top: 1rpx solid #eee;
}
.input {
  flex: 1;
  height: 72rpx;
  background: #f2f2f2;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.send {
  margin-left: 12rpx;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
  background: #6ad3c8;
  color: #ffffff;
  font-size: 28rpx;
}
.placeholder {
  color: #c1c1c1;
  font-size: 26rpx;
}
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 16rpx, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}
