.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.header {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #eee;
}
.title {
  font-size: 34rpx;
  color: #2b2b2b;
}
.messages {
  flex: 1;
  padding: 24rpx 24rpx 12rpx;
  background: #f7f7f7;
}
.msg {
  max-width: 70%;
  margin: 12rpx 0;
  display: flex;
  flex-direction: column;
}
.msg.other {
  align-self: flex-start;
}
.msg.self {
  align-self: flex-end;
  text-align: right;
}
.nick {
  font-size: 22rpx;
  color: #9a9a9a;
  margin-bottom: 6rpx;
}
.bubble {
  padding: 18rpx 22rpx;
  border-radius: 22rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}
.other .bubble {
  background: #ffffff;
  color: #2b2b2b;
}
.self .bubble {
  background: #d4f2ee;
  color: #1a4b43;
}
.time {
  font-size: 20rpx;
  color: #b0b0b0;
  margin-top: 6rpx;
}
.input-bar {
  display: flex;
  align-items: center;
  padding: 12rpx;
  background: #ffffff;
  border-top: 1rpx solid #eee;
}
.input {
  flex: 1;
  height: 72rpx;
  background: #f2f2f2;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.send {
  margin-left: 12rpx;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
  background: #6ad3c8;
  color: #ffffff;
  font-size: 28rpx;
}
